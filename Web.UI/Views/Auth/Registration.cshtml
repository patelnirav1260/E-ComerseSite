@model Web.UI.Models.Dto.RegistrationRequestDto

@{
    ViewData["Title"] = "Registration";
}

<div class="container" style="padding-top: 5%;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-white mb-3 border-light shadow-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h2>Registration</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Registration">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Role" class="form-label"></label>
                                <select asp-for="Role" class="form-select" aria-label="Role selection" asp-items="@(new SelectList(ViewBag.role, "Value", "Text"))">
                                    <option disabled selected>--select role--</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
