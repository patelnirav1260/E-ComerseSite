@model Web.UI.Models.Dto.LoginRequestDto

@{
    ViewData["Title"] = "Login";
}

<div class="container" style="padding-top: 5%;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-white mb-3 border-light shadow-lg">
                <div class="text-center card-header">
                    <h2>Login</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Login">
                        <div class="text-center"><span class="text-danger">@TempData["loginError"]</span></div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control" placeholder="enter your email as a username"/>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
