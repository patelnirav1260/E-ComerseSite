@model Web.UI.Models.Coupon

@{
    ViewData["Title"] = "CreateCoupon";
}

<div class="container" style="padding:5%;">
    <div class="card text-white bg-dark mb-3">
        <div class="card-header text-center">
            <h2>Create Coupon</h2>
        </div>
        <div class="card-body">
            <form asp-action="CreateCoupon" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row pb-3">
                    <label for="CouponCode" class="col-sm-3 col-form-label fs-5">Coupon Code:</label>
                    <div class="col-sm-9">
                        <input asp-for="CouponCode" class="form-control" placeholder="Enter coupon code" />
                        <span asp-validation-for="CouponCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row pb-3">
                    <label for="DiscountAmount" class="col-sm-3 col-form-label fs-5">Discount Amount:</label>
                    <div class="col-sm-9">
                        <input asp-for="DiscountAmount" class="form-control" placeholder="Enter Discount Amount" />
                        <span asp-validation-for="DiscountAmount" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row pb-3">
                    <label for="MinAmount" class="col-sm-3 col-form-label fs-5">Minimum Amount:</label>
                    <div class="col-sm-9">
                        <input asp-for="MinAmount" class="form-control" placeholder="Enter Minimum Amount" />
                        <span asp-validation-for="MinAmount" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row pb-3">
                    <div class="col-sm-9 offset-sm-3">
                        <div class="d-flex justify-content-between flex-wrap gap-2">
                            <div class="d-grid flex-grow-1">
                                <a class="btn btn-lg btn-primary" asp-controller="Coupon" asp-action="CouponIndex">Go to List</a>
                            </div>
                            <div class="d-grid flex-grow-1">
                                <input type="submit" value="Create" class="btn btn-lg btn-success" />
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
